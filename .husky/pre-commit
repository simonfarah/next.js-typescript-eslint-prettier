#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Prettier checks
echo '';
echo '⏳ Running Prettier checks. Please wait...';
npx prettier --check . --loglevel warn ||
(
  echo '❌ Prettier error(s) found. Please fix them before committing.';
  false;
)
echo '✅ Prettier checks passed';

# Typescript checks
echo '';
echo '⏳ Running Typescript checks. Please wait...';
npx tsc --noEmit ||
(
  echo '❌ Typescript error(s) found. Please fix them before committing.';
  false;
)
echo '✅ Typescript checks passed';

# ESLint checks
echo '';
echo '⏳ Running ESLint checks. Please wait...';
npx eslint --ext .js,.jsx,ts,tsx ||
(
  echo '❌ ESLint error(s) found. Please fix them before committing.';
  false;
)
echo '✅ ESLint checks passed';

# Ready to commit
echo '';
echo '🎊 Changes ready to be committed!';
echo '';
